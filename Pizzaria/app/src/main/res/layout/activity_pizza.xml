<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="6"
    android:orientation="horizontal"
    android:background="@drawable/pizza1">>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Gerencia de Pizzas"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp" />


        <Button
            android:id="@+id/btncadastroPizza"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Cadastrar Pizza"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnModPizza"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Modificar Pizza"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnExcluirPizza"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Exluir Pizza"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnListarPizza"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Listar Pizzas"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Voltar"
            android:textColor="#ffffff" />

    </LinearLayout>
</LinearLayout>
